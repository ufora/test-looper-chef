<VirtualHost *:80>
    ServerName <%= @params[:server_name] %>
    Redirect / https://<%= @params[:server_name] %>/
</VirtualHost>


<VirtualHost *:443>
    SSLEngine On
    SSLProxyEngine On

    SSLCertificateFile       /etc/apache2/ssl/ufora.crt
    SSLCertificateKeyFile    /etc/apache2/ssl/ufora.key
    SSLCertificateChainFile  /etc/apache2/ssl/ufora.ca


    ServerAlias ci
    <Proxy http://localhost:8888/>
            Order deny,allow
            Allow from all
    </Proxy>
    ProxyRequests Off
    ProxyPreserveHost on
    ProxyVia Off
    ProxyPass               / http://localhost:8888/ retry=1
    ProxyPassReverse        / http://localhost:8888/
    ProxyPassReverse        / http://<%= @params[:server_name] %>/
</VirtualHost>

description "test-looper"
author      "ufora"

setuid <%= @service_account %>
setgid <%= @service_account %>

respawn
respawn limit 20 5

env HOME=/home/<%= @service_account %>
env PYTHONPATH=<%= @src_dir %>/current
env GIT_SSH=<%= @git_ssh_wrapper %>
env LOG_FILE=<%= @log_file %>
env STACK_FILE=<%= @stack_file %>
env INSTALL_DEPENDENCIES_EXPECTED_VERSION=<%= @expected_dependencies_version %>


pre-start script
    cd $PYTHONPATH
    git remote update
    git checkout -f origin/<%= @git_branch %>
end script


script
    echo "Starting test-looper as `whoami`" >> $LOG_FILE
    python $PYTHONPATH/ufora/scripts/test-looper.py <%= @config_file %> >> $LOG_FILE 2>&1
end script
